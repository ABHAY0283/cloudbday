<ApplicationManifest
	xmlns="http://schemas.google.com/ApplicationManifest/2009">
	<Name>Cloud BDay</Name>
	<Description>Keep track of your company birthdays</Description>

	<Support>
		<!-- Vinculo donde son enviados administradores y usuarios para soporte -->
		<Link rel="support" href="http://sites.google.com/a/eforcers.com/ecbd/support" />
		<!-- URL for application setup as an optional redirect during the install -->
		<!-- <Link rel="setup" href="http://cloudbday.appspot.com/settings?hd=${DOMAIN_NAME}" 
			/> -->
		<!-- URL for application configuration, accessed from the app settings 
			page in the control panel -->
		<Link rel="manage" href="http://cloudbday.appspot.com/a/${DOMAIN_NAME}/" />
		<!-- URL that is displayed to admins during the deletion process, to specify 
			policies such as data retention, how to claim accounts, etc. -->
		<!-- <Link rel="deletion-policy" href="http://sites.google.com/a/eforcers.com/easg/deletion-policy" 
			/> -->
	</Support>

	<!-- Muestra este vinculo en la navegacion universal de los usuarios -->
	<Extension id="navLink" type="link">
		<Name>Cloud BDay</Name>
		<Url>http://cloudbday.appspot.com/a/${DOMAIN_NAME}/openid/login/</Url>
		<Scope ref="calendarAPI" />
		<Scope ref="contactsAPI" />
		<Scope ref="provisioningUsers" />
		<Scope ref="provisioningGroups" />
	</Extension>

	<!-- Declara el dominio OpenID para que la aplicacion quede en lista blanca -->
	<Extension id="realm" type="openIdRealm">
		<Url>http://cloudbday.appspot.com</Url>
	</Extension>

	<!-- Acceso a cuales APIs y por que? -->
	<Scope id="calendarAPI">
		<Url>https://www.google.com/calendar/feeds/</Url>
		<Reason>This app let the users suscribe directly to a birthday
			calendar created and managed by the admin.
		</Reason>
	</Scope>

	<Scope id="contactsAPI">
		<Url>https://www.google.com/m8/feeds/</Url>
		<Reason>This app reads and writes users contact's birthday field.
		</Reason>
	</Scope>

	<Scope id="provisioningUsers">
		<Url>https://apps-apis.google.com/a/feeds/user/#readonly</Url>
		<Reason>This application read the users from Google Apps domain
		</Reason>
	</Scope>

	<Scope id="provisioningGroups">
		<Url>https://apps-apis.google.com/a/feeds/group/#readonly</Url>
		<Reason>This application read the groups from Google Apps domain
		</Reason>
	</Scope>

	<!-- Configures extensions available for the only, for now, edition of the 
		application -->
	<Edition id="free">
		<Name>Cloud BDay</Name>
		<Extension ref="realm" />
		<Extension ref="navLink" />
	</Edition>
</ApplicationManifest>